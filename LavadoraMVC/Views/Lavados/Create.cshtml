@model LavadoraMVC.Models.Lavados

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutAdmin";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h1>Agregar</h1>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mt-1">
                <label asp-for="Velocidad" class="control-label"></label>
                <input asp-for="Velocidad" class="form-control" min="1" max="10" />
                <span asp-validation-for="Velocidad" class="text-danger"></span>
            </div>
            <div class="mt-1">
                <label asp-for="Calidad" class="control-label"></label>
                <input asp-for="Calidad" class="form-control" min="1" max="10"/>
                <span asp-validation-for="Calidad" class="text-danger"></span>
            </div>
            <div class="mt-1">
                <label asp-for="Amabilidad" class="control-label"></label>
                <input asp-for="Amabilidad" class="form-control" type="number" min="1" max="10"/>
                <span asp-validation-for="Amabilidad" class="text-danger"></span>
            </div>
            <div class="mt-1">
                <label asp-for="IdEmpleado" class="control-label"></label>
                <select asp-for="IdEmpleado" class ="form-control" asp-items="ViewBag.IdEmpleado"></select>
            </div>
            <div class="mt-1">
                <label asp-for="IdTipoLavado" class="control-label"></label>
                <select asp-for="IdTipoLavado" class ="form-control" asp-items="ViewBag.IdTipoLavado"></select>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


