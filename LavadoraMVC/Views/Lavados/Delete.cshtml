@model LavadoraMVC.Models.Lavados

@{
    ViewData["Title"] = "Delete";
    Layout = "_LayoutAdmin";
}

<h1>Eliminar</h1>

<h3>Estás seguro de eliminar este lavado?</h3>
<div>
    <h4>Lavados</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Velocidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Velocidad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Calidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Calidad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amabilidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amabilidad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdClienteNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdClienteNavigation.Celular)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdEmpleadoNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdEmpleadoNavigation.Celular)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdTipoLavadoNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdTipoLavadoNavigation.Descripcion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>
